{
  "name": "tailwind-css-boilerplate",
  "version": "1.0.0",
  "description": "A minimal Tailwind CSS boilerplate for learning",
  "main": "index.html",
  "scripts": {
    "dev": "concurrently \"tailwindcss -i ./src/input.css -o ./dist/output.css --watch\" \"live-server --port=3000 --open=/index.html\"",
    "build-css": "tailwindcss -i ./src/input.css -o ./dist/output.css --watch",
    "build": "tailwindcss -i ./src/input.css -o ./dist/output.css",
    "serve": "live-server --port=3000 --open=/index.html"
  },
  "keywords": [
    "tailwindcss",
    "css",
    "boilerplate"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^9.2.0",
    "live-server": "^1.2.2",
    "tailwindcss": "^3.4.0"
  }
}
